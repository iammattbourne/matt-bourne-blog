---
import '../styles/output.css';

import Head from '../components/Head.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PostTitle from '../components/PostTitle.astro';

const { pageTitle, publishedDate } = Astro.props;
---
<html lang="en">
	<Head pageTitle={pageTitle}/>
	<body class="bg-white">
		<Header />
        <section class="lg:py-4 py-2 px-4 max-w-7xl mx-auto font-body">
			<PostTitle pageTitle={pageTitle} publishedDate={publishedDate}/>
            <slot />
        </section>
		<Footer />
        <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.js"></script>
	</body>
</html>
