---
import '../styles/output.css';

import Header from '../components/Header.astro';
import PageTitle from '../components/PageTitle.astro';
import Footer from '../components/Footer.astro';

const { pageTitle, pageIntro } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.css"  rel="stylesheet" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
        <script is:inline src="https://kit.fontawesome.com/442ee84739.js" crossorigin="anonymous"></script>
    </head>
	<body class="bg-white">
		<Header />
        <section class="lg:py-4 py-2 pb-8 px-4 sm:px-4 lg:px-6 max-w-7xl mx-auto font-body">
            <PageTitle pageTitle={pageTitle} pageIntro={pageIntro}/>
            <slot />
        </section>
		<Footer />
        <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.js"></script>
	</body>
</html>
