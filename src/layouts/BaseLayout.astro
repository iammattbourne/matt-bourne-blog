---
import '../styles/output.css';

import Head from '../components/Head.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageTitle from '../components/PageTitle.astro';

const { pageTitle, pageIntro } = Astro.props;
---
<html lang="en">
	<Head pageTitle={pageTitle}/>
	<body class="bg-white">
		<Header />
        <section class="lg:py-4 py-2 px-4 max-w-7xl mx-auto font-body">
            <PageTitle pageTitle={pageTitle} pageIntro={pageIntro}/>
            <slot />
        </section>
		<Footer />
        <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.js"></script>
		<script is:inline src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
	</body>
</html>
