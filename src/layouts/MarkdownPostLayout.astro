---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;

import {formatDate} from '../scripts/dateFormat';
--- 
<BaseLayout pageTitle={frontmatter.title} pageIntro={frontmatter.description}>
    <section class="blogContent my-8">
        <img class="h-96 w-full object-cover" src={frontmatter.image.url} width="100%" alt={frontmatter.image.alt} /> 
        <div class="blogMeta mt-8 mb-6">
            <div class="tags inline-flex justify-between">
                <p class="text-sm leading-5 text-gray-500 mr-1">Category:</p>
                {frontmatter.tags.map((tag) => (
                    <a href={`/tags/${tag}`}>
                        <p class="tag text-sm leading-5 font-medium text-brand-blue hover:text-brand-blue-light transition ease-in-out duration-150">
                            {tag}
                        </p>
                    </a>
                ))}
            </div>
            <p class="text-sm leading-5 text-gray-500">Published on: <span class="text-sm leading-5 font-medium text-brand-blue">{formatDate(frontmatter.pubDate)}</span></p>
        </div>
        <slot />
        <div class="blogFooter text-center mt-8">
            <div class="backButton">
                <a href=/blog>
                    <p class="inline-flex items-center text-sm leading-5 font-medium text-brand-blue hover:text-brand-blue-light transition ease-in-out duration-150">
                        <i class="mr-2 fa-solid fa-arrow-left"></i> Back to the blog
                    </p>
                </a>
            </div>
        </div>
    </section>
</BaseLayout>
