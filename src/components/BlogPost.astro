---
const { title, description, url, date, tags } = Astro.props;

import {formatDate} from '../scripts/dateFormat';
---
<article class="flex flex-col rounded-lg shadow-lg overflow-hidden">
    <div class="flex-shrink-0">
        <img class="h-48 w-full object-cover" src="https://images.unsplash.com/photo-1547586696-ea22b4d4235d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" alt="Home Office">
    </div>
    <div class="flex-1 bg-white p-6 flex flex-col justify-between">
        <div class="main flex flex-col">
            <div class="inline-flex justify-between">
                <div class="tags">
                    {tags.map((tag) => (
                        <span class="tag text-sm leading-5 font-medium text-brand-blue hover:text-brand-blue-light transition ease-in-out duration-150"><a href={`/tags/${tag}`}>{tag}</a></span>
                    ))}
                </div>
                <span class="text-sm leading-5 text-gray-500">{formatDate(date)}</span>
            </div>

            <h2 class="mt-2 text-xl leading-7 font-semibold text-gray-900 hover:text-gray-600 transition ease-in-out duration-150"><a href={url}>{title}</a></h2>
            <p class="mt-3 text-base leading-6 text-gray-500">{description}</p>
        </div>
        <div class="mt-6 flex justify-end">
            <a href={url} class="inline-flex items-center text-sm leading-5 font-medium text-brand-blue hover:text-brand-blue-light transition ease-in-out duration-150">
                Read more <i class="ml-2 fa-solid fa-arrow-right"></i>
            </a>
        </div>
    </div>
</article> 

