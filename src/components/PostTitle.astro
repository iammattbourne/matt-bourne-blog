---
const { pageTitle, tags } = Astro.props;
---
<div class="w-full text-center mx-auto">
    <h1 class="w-full font-bold lg:text-4xl text-3xl leading-loose text-gray-900 font-heading lg:mb-4 mb-2">{pageTitle}</h1>
    <div class="blogMeta text-center mb-8">
        <div class="tags inline-flex justify-center flex-end">
            <p class="lg:text-xl text-l font-light text-gray-600 mr-1">Category:</p>
            {tags.map((tag) => (
                <a href={`/tags/${tag}`}>
                    <p class="lg:text-xl text-l lg:leading-5 leading-1 font-semibold text-brand-blue hover:text-brand-blue-light transition ease-in-out duration-150">
                        {tag}
                    </p>
                </a>
            ))}
        </div>
    </div>
</div> 
